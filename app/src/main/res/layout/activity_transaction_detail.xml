<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <variable
        name="viewModel"
        type="com.ground0.masterofcoin.auditTransaction.viewModel.TransactionDetailActivityViewModel"
        />
    <import type="org.apache.commons.lang3.text.WordUtils"/>
  </data>

  <ScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <android.support.v7.widget.CardView
          android:id="@+id/a_transaction_detail_card"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="@dimen/view_margin_size1"
          app:cardBackgroundColor="@color/cardview_light_background"
          app:cardCornerRadius="@dimen/cardview_default_radius"
          app:cardElevation="@dimen/cardview_default_elevation"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
          <View
              android:id="@+id/a_transaction_detail_state_frame"
              android:layout_width="match_parent"
              android:layout_height="4dp"
              android:background="@{viewModel.state}"
              />
          <ImageView
              android:id="@+id/a_transaction_detail_image"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_below="@id/a_transaction_detail_state_frame"
              android:layout_gravity="center_horizontal"
              android:layout_margin="@dimen/view_margin_size2"
              android:contentDescription='@{viewModel.expense.category}'
              android:src='@{viewModel.category}'
              />

          <TextView
              android:id="@+id/a_transaction_detail_amount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/a_transaction_detail_image"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="@dimen/view_margin_size2"
              android:text='@{viewModel.amount}'
              android:textAppearance="@style/ExpenseText"
              android:textSize="32sp"
              />

          <View
              android:id="@+id/a_transaction_detail_divider_1"
              android:layout_width="match_parent"
              android:layout_height="@dimen/divider"
              android:layout_below="@+id/a_transaction_detail_amount"
              android:background="@color/md_light_dividers"
              />

          <TextView
              android:id="@+id/a_transaction_detail_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/view_margin_size2"
              android:layout_marginLeft="@dimen/view_margin_size2"
              android:layout_marginRight="@dimen/view_margin_size2"
              android:layout_marginTop="@dimen/view_margin_size2"
              android:drawableLeft="@drawable/ic_description_black_24dp"
              android:drawablePadding="@dimen/view_margin_size2"
              android:text='@{viewModel.expense.description}'
              android:textAppearance="@style/NormalText"
              android:textSize="18sp"
              />
          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/divider"
              android:layout_marginLeft="@dimen/view_margin_size7"
              android:layout_marginRight="@dimen/view_margin_size2"
              android:background="@color/md_light_dividers"
              />

          <TextView
              android:id="@+id/a_transaction_detail_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/view_margin_size2"
              android:layout_marginLeft="@dimen/view_margin_size2"
              android:layout_marginRight="@dimen/view_margin_size2"
              android:layout_marginTop="@dimen/view_margin_size2"
              android:drawableLeft="@drawable/ic_schedule_black_24dp"
              android:drawablePadding="@dimen/view_margin_size2"
              android:gravity="center"
              android:text='@{viewModel.time}'
              />

          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/divider"
              android:layout_marginLeft="@dimen/view_margin_size7"
              android:layout_marginRight="@dimen/view_margin_size2"
              android:background="@color/md_light_dividers"
              />

          <TextView
              android:id="@+id/a_transaction_detail_category"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/view_margin_size2"
              android:layout_marginLeft="@dimen/view_margin_size2"
              android:layout_marginRight="@dimen/view_margin_size2"
              android:layout_marginTop="@dimen/view_margin_size2"
              android:drawableLeft="@drawable/ic_label_black_24dp"
              android:drawablePadding="@dimen/view_margin_size2"
              android:gravity="center"
              android:text='@{viewModel.expense.category}'
              />
          <View
              android:id="@+id/a_transaction_detail_divider_2"
              android:layout_width="match_parent"
              android:layout_height="@dimen/divider"
              android:layout_below="@id/a_transaction_detail_description"
              android:layout_marginTop="@dimen/view_margin_size2"
              android:background="@color/md_light_dividers"
              />
          <RadioGroup
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/a_transaction_detail_divider_2"
              android:layout_marginLeft="@dimen/view_margin_size2"
              android:layout_marginRight="@dimen/view_margin_size2"
              android:layout_marginTop="@dimen/view_margin_size2"
              android:orientation="horizontal"
              >

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/a_transaction_detail_unverified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked='@{!viewModel.isVerified &amp;&amp; !viewModel.isFraud}'
                android:gravity="center_vertical"
                android:text="@string/unverified"
                />
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/a_transaction_detail_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked='@{viewModel.isVerified}'
                android:enabled='@{viewModel.verifiedEnabled}'
                android:gravity="center_vertical"
                android:text="@string/verified"
                />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/a_transaction_detail_fraudlent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked='@{viewModel.isFraud}'
                android:enabled='@{viewModel.fraudEnabled}'
                android:gravity="center_vertical"
                android:text="@string/fraud"
                />
          </RadioGroup>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_gravity="right"
              android:layout_margin="@dimen/view_margin_size2"
              android:onClick="@{viewModel::onSave}"
              android:text="@string/save"
              style="@style/Base.Widget.AppCompat.Button.Colored"
              />
        </LinearLayout>

      </android.support.v7.widget.CardView>

    </FrameLayout>
  </ScrollView>
</layout>